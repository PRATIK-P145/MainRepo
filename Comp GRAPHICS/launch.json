{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug OpenGL Program",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/opengl_window.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "path/to/your/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
